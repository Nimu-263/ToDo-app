<div class='calendar-top'>
  <%= form_with model: @plan, url: calendars_path, class: 'form' do |f| %>
    <%= f.label :日付を選択, class: 'lavel' %>
    <%= f.date_field :date, class: 'date-select' %>
    <%= f.label :予定を入力, class: 'lavel' %>
    <%= f.text_field :plan, class: 'text-input' %>
    <%= f.submit '予定へ追加！', class: 'submit-btn' %>
  <% end %>

  <div class='month'>
    <span>
      <%= "#{@first_day.month}月の予定" %>
    </span>

  </div>

</div>

<div class = 'button'>
  <button type = "button" class = 'button_month_week' id = 'button_month_week'>月⇔今週</button>
</div>

<div class = 'week_plans' id = "week_plans" style = 'display: none;'>
  <%= render "week" %>
</div>

<div class='calendar' id='calendar'>
  <% @month_days.each do |day| %>
    <div class='item'>
      <div class='date'>
        <%= day[:date] %>日
        <%if day[:wday] == "(土)" %>
          <span class='staday'><%= day[:wday] %></span>
        <%elsif day[:wday] == "(日)" %>
          <span class='sunday'><%= day[:wday] %></span>
        <%else %>
          <span><%= day[:wday] %></span>
        <% end %>
      </div>
      <ul class='content'>
        <% if day[:plans].length != 0 %>
          <% day[:plans].each do |plan| %>
            <li class='plan-list'>・<%= plan %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>